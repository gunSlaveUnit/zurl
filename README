zurl - URL shortener

requirements:
  go
  redis - used as a cache to store short URLs with related long URLs
  docker - used to run containers

commands:
  clone:
    git clone https://github.com/gunSlaveUnit/zurl.git

  change working directory:
    cd zurl

  create .env file:
    CACHE_DB=<0...n>
    CACHE_PASSWORD=<password>
    CACHE_URL=<host:port>

  run:
    docker:
      docker compose -f deployments/compose.yaml -p zurl up -d

    manual:
      cache:
        linux:
          sudo apt-get update
          sudo apt-get install redis-server
        windows:
          choco install redis

      back:
        download dependencies:
          go mod download

        build:
          go build -o zurl cmd/zurl/main.go

        execute:
          ./zurl